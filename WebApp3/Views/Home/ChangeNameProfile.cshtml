@model WebApp3.ViewModels.ChangeNameProfileViewModel

@{
    Layout = null;
}

<form asp-action="ChangeNameProfile" onsubmit="return jQueryAjaxPost(this, 'Отлично','Вы успешно изменили имя и фамилию!','success')">
    <div class="form-group">
        <input asp-for="FirstName" class="form-control" placeholder="Введи имя..." />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="LastName" class="form-control" placeholder="Введи фамилию..." />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Добавить</button>
</form>
<style>
    body {
        color: #130c38;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
